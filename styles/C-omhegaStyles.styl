@import "./A-geotem--mainStyles.styl"
@import "./A-geotem--buttonStyles.styl"


@import "./B-geotemLanding--basicStyles.styl"

.__mainBanner-omhega
	background-image: url('../assets/images/WEBPImages/Omhega_MainBanner_Background.webp'), url('../assets-TerraWare/images/PNGimages/Omhega_MainBanner_Background.png')
	background-position: center
	background-size: cover
	background-repeat: none

	@media (min-width: 450px)
		background-image: url('../assets/images/WEBPImages/Omhega_MainBanner_Background_tabletDesktop.webp'), url('../assets-TerraWare/images/PNGimages/Omhega_MainBanner_Background_tabletDesktop.png')

	.__companyLogoContainer-omhega
		img
			max-width: 180px
		.__mainParagraph-omhega
			color: $textColor
			font-size: 1.4rem
			font-weight: 500

	.__descriptionAndButtonContainer-omhega
		h1
			color: $secondColor
			font-size: 2.8rem
		.__description-omhega
			margin-bottom: 30px
		h2
			font-size: 1.8rem
			color: $textColor
			margin-bottom: 50px

.serviceBox

	.--omhega-listStyle

		position: relative

		padding: 30px 5% 0 5% 
		list-style: none

		.__numeralia-omhega
			display: flex
			align-items: center
			flex-wrap: wrap
			justify-content: center

			margin-top: 20px

			p
				min-width: 100%
				text-align: center


		li:before
			content: '\276F '
			font-weight: 700
			letter-spacing: 15px
			line-height: 54px
			color: $mainColor

		.__numberIcon-omhega
			width: 70px
			font-size: 3.6rem
			font-weight: 600

			margin-right: 15px

			text-align: center

			color: $secondColor
		
		.__excavacionItem
			display: flex
			align-items: center
			flex-wrap: nowrap
			justify-content: start

	.__omhega-listStyle-excavation
		padding-top: 0


@import "./A-geotem--footerStyle.styl"