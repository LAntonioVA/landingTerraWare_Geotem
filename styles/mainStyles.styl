$font1 = 'Montserrat', sans-serif /*Main font*/

/*Colors*/
$mainColor = #DA363A
$mainAlternativeColor = #16809C
$secondColor = #C63335
$secondAlternativeColor = #006C89
$complementColor = #61A7D7

$headerColor = #455C61
$textColor = #042129

$lightBackground = #E6EBED
$mainGray = #C6D7DC
$darkBackground = #042129

$baseBlack = #00070A
$baseWhite = #EEF6F9
$secondaryWhite = #FDFBFB

$checkColor = #84ED88
$errorColor = #F09898

/* Basic Styles */

*
	box-sizing: border-box
	margin: 0
	padding: 0

html
	font-size: 62.5%
	font-family: $font1

/* Header styles functions - only size */

for titulo in 1 2 3
	h{titulo}
		font-size: 6rem - (1.2 * titulo)
		color: $headerColor

