@import "./A-geotem--mainStyles.styl"

for titulo in 1 2 3
	h{titulo}
		font-size: 4.2rem - (1.2 * titulo)

.mainBanner
	
	height: 50vh
	min-height: 500px

	.mainBanner--descriptionAndButtonContainer
		.mainBanner--description
			max-width: 400px
		.servicesList__desktopDisplay
			display: block
			.servicesList
				margin-bottom: 0
			ul
				column-count: 1
				margin: 0
				li
					margin-bottom: 20px
					a
						color: $baseWhite
		button
			display: none
	img	
		width: 85%
		max-width: 500px

main
	h1
		height: auto
	.servicesList__desktopDisplay
		.servicesList
			display: block
	.servicesList
		display: none
	.serviceBox
		min-height: 450px
		padding: 50px
		margin-bottom: 0

		grid-template-areas:
        "title picture" "subtitle picture" "information picture" "information picture" "actionButton picture"
		column-gap: 50px

		background-color: initial
		box-shadow: initial

		.--standarImageResponsive
			box-shadow: 12px 12px 24px rgba(4, 33, 41, 0.15)

	#service2, #service4
		grid-template-areas:
        "picture title" "picture subtitle" "picture information" "picture information" "picture actionButton"
	.finalBox
		padding: 0 15%
		padding-top: 30px