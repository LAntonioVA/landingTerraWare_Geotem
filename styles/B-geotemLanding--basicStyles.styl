/* main styles used on each landing's box */

boxSizeandPosition()
	width: 90%
	height: auto
	min-height: 275px
	margin: 15px auto
	margin-bottom: 5rem
	padding: 50px 20px

boxStyles()
	background-color: $secondaryWhite
	border-radius: 8px
	box-shadow: 12px 12px 24px rgba(4, 33, 41, 0.15)

/* Main Styles used in box's elements */ 

boxDisplayElements()
	display: flex
	flex-direction: column

imageSizeandPosition()

	align-self: center
	margin: 50px auto
	width: 100%
	height: 100%

	.--standarImageResponsive
		width: 100%
		height: auto
		object-fit: cover
		object-position: center
		border-radius: 8px


/* Styles focused on a specific classes of each project */

header
	position: absolute
	width: 97vw
	nav
		background-color: initial
		font-weight: 500
		ul
			display: flex
			flex-direction: row
			justify-content: flex-end
			list-style: none

			li
				padding: 15px 15px 5px 5px
		a
			font-size: 1.2rem
			color: $baseWhite

.mainBanner

	
	boxSizeandPosition()
	boxStyles()

	margin-top: 0	
	width: 100%
	border-radius: 0px

	picture
			display: block
			margin: 0 auto
	
	img
		width: 100%
		max-width: 250px
		display: block
		margin: 0 auto

	h1, h2, h3, p
		text-align: center
		color: $baseWhite
		line-height: 150%
	
	.--mainParagraph
		margin-top: 15px
		font-weight: 275

	.mainBanner--description
		width: auto
		margin: 50px 10px

	.mainBanner--descriptionAndButtonContainer
		.servicesList__desktopDisplay
			display: none

.servicesList

	margin-bottom: 80px

	h1
		text-align: center
		margin: 50px auto
	ul
		list-style: none
		li
			margin-left: 7.5%
			margin-bottom: 30px
			a
				font-size: 1.4rem
				color: $textColor
				text-decoration: none
		li:before
			content: '\276F '
			font-weight: 700
			letter-spacing: 15px
			color: $mainColor

.serviceBox

	max-width: 1200px

	boxSizeandPosition()
	boxStyles()
	boxDisplayElements()

	h1, .--mainParagraph
		text-align: center

	.--mainParagraph
		margin-top: 30px

	.serviceBox--serviceImageContainer
		imageSizeandPosition()
		
		.__mobileSizeAdjustment
			min-height: 250px

	.--secondaryParagraph
		margin-top: 0px
		text-align: left

	.__tabletDesktopDisplay
		display: none

.finalBox
	boxSizeandPosition()
	padding-top: 0px
	padding-bottom: 0px

	h1, .--mainParagraph
		text-align: center

	.--mainParagraph
		margin: 30px auto

	.--secondaryParagraph
		text-align: left